---
import { Image } from "astro:assets";
import logoImage from "../assets/Logo.png";

const { activePath } = Astro.props;
---

<header class="site-header">
    <!-- Top Black Bar -->
    <div class="top-black-bar">
        <div class="container top-bar-inner">
            <span class="home-label"
                >{
                    activePath
                        ? activePath.replace("/", "").toUpperCase() || "HOME"
                        : "HOME"
                }</span
            >
            <div class="top-icons">
                <a href="#" class="icon-link">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"
                        ></path></svg
                    >
                </a>
                <a href="/cart" class="icon-link">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"
                        ></path><line x1="3" y1="6" x2="21" y2="6"></line><path
                            d="M16 10a4 4 0 0 1-8 0"></path></svg
                    >
                </a>
                <a href="/login" class="icon-link">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"
                        ></path><circle cx="12" cy="7" r="4"></circle></svg
                    >
                </a>
            </div>
        </div>
    </div>

    <!-- Main Navigation Bar -->
    <nav class="main-nav-bar">
        <div class="container main-nav-inner">
            <a href="/" class="logo">
                <Image src={logoImage} alt="Skinfinity Logo" height={45} />
            </a>
            <div class="nav-links">
                <a href="/" class={activePath === "/" ? "active" : ""}>HOME</a>
                <a
                    href="/products"
                    class={activePath === "/products" ? "active" : ""}>PAGES</a
                >
                <a
                    href="/contact"
                    class={activePath === "/contact" ? "active" : ""}>CONTACT</a
                >
                <a href="/about" class={activePath === "/about" ? "active" : ""}
                    >ABOUT</a
                >
                <a href="/chart" class={activePath === "/chart" ? "active" : ""}
                    >CHART</a
                >
            </div>
            <div class="nav-search">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><circle cx="11" cy="11" r="8"></circle><line
                        x1="21"
                        y1="21"
                        x2="16.65"
                        y2="16.65"></line></svg
                >
            </div>
        </div>
    </nav>
</header>

<style>
    .site-header {
        width: 100%;
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    /* Top Bar */
    .top-black-bar {
        background-color: #000;
        color: #fff;
        padding: 0.5rem 0;
    }

    .top-bar-inner {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .home-label {
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.1em;
    }

    .top-icons {
        display: flex;
        gap: 1.5rem;
    }

    .icon-link {
        color: #fff;
        display: flex;
        align-items: center;
        transition: color 0.3s;
    }

    .icon-link:hover {
        color: #f472b6;
    }

    /* Main Nav Bar */
    .main-nav-bar {
        background-color: #111827; /* Dark background as in reference */
        padding: 0.4rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .main-nav-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .nav-links {
        display: flex;
        gap: 1.5rem;
        margin-left: auto;
        margin-right: 2rem;
    }

    .nav-links a {
        color: #94a3b8;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        letter-spacing: 0.05em;
        transition: color 0.3s;
    }

    .nav-links a:hover,
    .nav-links a.active {
        color: #f472b6;
    }

    .nav-search {
        color: #fff;
        cursor: pointer;
    }

    @media (max-width: 768px) {
        .nav-links {
            display: none;
        }
    }
</style>
