---
import AdminLayout from "../../../layouts/adminLayout.astro";

const categories = [
    { id: 1, name: "Skincare", slug: "skincare" },
    { id: 2, name: "Makeup", slug: "makeup" },
    { id: 3, name: "Body Care", slug: "body-care" },
    { id: 4, name: "Hair Care", slug: "hair-care" },
];
---

<AdminLayout title="Kelola Kategori">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-bold text-slate-900">Kelola Kategori</h1>
        <button
            class="bg-pink-600 text-white px-6 py-3 rounded-full font-bold text-sm uppercase tracking-wider hover:bg-pink-700 transition-colors shadow-lg shadow-pink-600/20"
        >
            + Tambah Kategori
        </button>
    </div>

    <div
        class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden"
    >
        <table class="w-full text-left text-sm text-slate-600">
            <thead
                class="bg-slate-50 text-slate-900 font-bold uppercase tracking-wider text-xs border-b border-gray-100"
            >
                <tr>
                    <th class="px-6 py-4">ID</th>
                    <th class="px-6 py-4">Nama Kategori</th>
                    <th class="px-6 py-4">Slug</th>
                    <th class="px-6 py-4 text-center">Aksi</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-50">
                {
                    categories.map((cat) => (
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4 font-mono text-xs">
                                {cat.id}
                            </td>
                            <td class="px-6 py-4 font-bold text-slate-900">
                                {cat.name}
                            </td>
                            <td class="px-6 py-4 opacity-70">{cat.slug}</td>
                            <td class="px-6 py-4 text-center">
                                <button class="text-slate-400 hover:text-blue-600 mx-2">
                                    Edit
                                </button>
                                <button class="text-slate-400 hover:text-red-600 mx-2">
                                    Hapus
                                </button>
                            </td>
                        </tr>
                    ))
                }
            </tbody>
        </table>
    </div>
</AdminLayout>
