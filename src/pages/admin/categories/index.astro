---
import AdminLayout from "../../../layouts/adminLayout.astro";

const categories = [
    { id: 1, name: "Alat Kecantikan", slug: "alat-kecantikan", products: 120 },
    { id: 2, name: "Minuman", slug: "minuman", products: 85 },
    { id: 3, name: "Makanan", slug: "makanan", products: 200 },
];
---

<AdminLayout title="Kelola Kategori">
    <div class="glass-panel section">
        <div class="header-actions">
            <a href="/admin/categories/create" class="btn btn-primary"
                >+ Tambah Kategori</a
            >
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nama Kategori</th>
                        <th>Slug</th>
                        <th>Jumlah Produk</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    {
                        categories.map((cat) => (
                            <tr>
                                <td>#{cat.id}</td>
                                <td>{cat.name}</td>
                                <td>{cat.slug}</td>
                                <td>{cat.products}</td>
                                <td>
                                    <a
                                        href={`/admin/categories/edit/${cat.id}`}
                                        class="action-btn btn-edit"
                                    >
                                        Edit
                                    </a>
                                    <button class="action-btn btn-delete">
                                        Hapus
                                    </button>
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
            </table>
        </div>
    </div>
</AdminLayout>

<style>
    .section {
        padding: 1.5rem;
    }
</style>
