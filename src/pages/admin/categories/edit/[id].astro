---
import AdminLayout from "../../../../layouts/adminLayout.astro";

const { id } = Astro.params;

// Mock data based on ID
const category = {
    id: id,
    name: id === "1" ? "Skincare" : "Makeup",
    slug: id === "1" ? "skincare" : "makeup",
};

if (Astro.request.method === "POST") {
    // In a real app, we would process the data here.
    // For UI focus, we just redirect back.
    return Astro.redirect("/admin/categories");
}
---

<AdminLayout title="Edit Kategori">
    <div class="flex justify-between items-center">
        <h2>Edit Kategori</h2>
        <a href="/admin/categories">Batal</a>
    </div>

    <form method="POST" id="form">
        <div>
            <label for="">Name</label>
            <input
                type="text"
                name="name"
                value={category.name}
                placeholder="Name"
            />
        </div>

        <div>
            <button type="submit">Simpan</button>
        </div>
    </form>
</AdminLayout>
