---
import AdminLayout from "../../../layouts/adminLayout.astro";
---

<AdminLayout title="Tambah Pelanggan">
    <div class="glass-panel section">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-xl font-bold">Tambah Pelanggan Baru</h2>
            <a href="/admin/customers" class="text-indigo-600 hover:underline"
                >Batal</a
            >
        </div>

        <form id="createCustomerForm" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="form-group">
                    <label class="block text-sm font-medium text-slate-700 mb-1"
                        >CUST ID</label
                    >
                    <input
                        type="text"
                        name="CUST_ID"
                        placeholder="CUST001"
                        class="w-full px-4 py-2 border rounded-lg outline-none focus:ring-2 focus:ring-indigo-500"
                        required
                    />
                </div>
                <div class="form-group">
                    <label class="block text-sm font-medium text-slate-700 mb-1"
                        >Nama Lengkap</label
                    >
                    <input
                        type="text"
                        name="CUST_NAME"
                        placeholder="Nama Pelanggan"
                        class="w-full px-4 py-2 border rounded-lg outline-none focus:ring-2 focus:ring-indigo-500"
                        required
                    />
                </div>
                <div class="form-group">
                    <label class="block text-sm font-medium text-slate-700 mb-1"
                        >Email</label
                    >
                    <input
                        type="email"
                        name="EMAIL"
                        placeholder="email@example.com"
                        class="w-full px-4 py-2 border rounded-lg outline-none focus:ring-2 focus:ring-indigo-500"
                        required
                    />
                </div>
                <div class="form-group">
                    <label class="block text-sm font-medium text-slate-700 mb-1"
                        >Nomor Kontak</label
                    >
                    <input
                        type="text"
                        name="CONTACT_NUMBER"
                        placeholder="08123456789"
                        class="w-full px-4 py-2 border rounded-lg outline-none focus:ring-2 focus:ring-indigo-500"
                    />
                </div>
            </div>

            <div class="form-group">
                <label class="block text-sm font-medium text-slate-700 mb-1"
                    >Alamat</label
                >
                <textarea
                    name="ADDRESS"
                    placeholder="Alamat lengkap..."
                    class="w-full px-4 py-2 border rounded-lg outline-none focus:ring-2 focus:ring-indigo-500 h-24"
                ></textarea>
            </div>

            <div class="pt-4">
                <button
                    type="submit"
                    class="bg-indigo-600 text-white px-8 py-2.5 rounded-xl font-bold hover:bg-indigo-700 transition shadow-lg shadow-indigo-100"
                >
                    Simpan Pelanggan
                </button>
            </div>
        </form>
    </div>

    <script is:inline>
        const form = document.getElementById("createCustomerForm");
        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch(
                    "http://localhost:3000/customers",
                    {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(data),
                    },
                );
                const result = await response.json();
                if (response.ok) {
                    alert("Pelanggan berhasil ditambahkan!");
                    window.location.href = "/admin/customers";
                } else {
                    alert(
                        "Gagal menambah pelanggan: " +
                            (result.error || "Unknown error"),
                    );
                }
            } catch (error) {
                console.error("Error:", error);
                alert("Terjadi kesalahan saat menghubungi server");
            }
        });
    </script>
</AdminLayout>

<style>
    .section {
        padding: 2rem;
    }
</style>
