---
import AdminLayout from "../../../layouts/adminLayout.astro";

const customers = [
    {
        id: 1,
        name: "Budi Santoso",
        email: "budi@example.com",
        phone: "08123456789",
        status: "Active",
    },
    {
        id: 2,
        name: "Siti Aminah",
        email: "siti@example.com",
        phone: "08987654321",
        status: "Active",
    },
    {
        id: 3,
        name: "Andi Saputra",
        email: "andi@example.com",
        phone: "08567891234",
        status: "Inactive",
    },
];
---

<AdminLayout title="Kelola Pelanggan">
    <div class="glass-panel section">
        <div class="header-actions">
            <a href="/admin/customers/create" class="btn btn-primary"
                >+ Tambah Pelanggan</a
            >
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nama Lengkap</th>
                        <th>Email</th>
                        <th>No. Telepon</th>
                        <th>Status</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    {
                        customers.map((cust) => (
                            <tr>
                                <td>#{cust.id}</td>
                                <td>{cust.name}</td>
                                <td>{cust.email}</td>
                                <td>{cust.phone}</td>
                                <td>
                                    <span
                                        class={`status-badge ${cust.status.toLowerCase()}`}
                                    >
                                        {cust.status}
                                    </span>
                                </td>
                                <td>
                                    <a
                                        href={`/admin/customers/edit/${cust.id}`}
                                        class="action-btn btn-edit"
                                    >
                                        Edit
                                    </a>
                                    <button class="action-btn btn-delete">
                                        Hapus
                                    </button>
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
            </table>
        </div>
    </div>
</AdminLayout>

<style>
    .section {
        padding: 1.5rem;
    }
</style>
