---
// src/pages/admin/customers/index.astro
import AdminLayout from "../../../layouts/adminLayout.astro";

const resp = await fetch("http://localhost:3000/customers");
const customers = await resp.json();
---

<AdminLayout title="Kelola Pelanggan">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">Data Pelanggan</h1>
            <p class="text-sm text-slate-500">
                Manajemen database customer toko lu bro.
            </p>
        </div>
        <a
            href="/admin/customers/create"
            class="bg-indigo-600 text-white px-5 py-2.5 rounded-xl font-bold text-sm shadow-lg shadow-indigo-100 hover:bg-indigo-700 transition"
        >
            + Customer Baru
        </a>
    </div>

    <div
        class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden"
    >
        <table class="w-full text-left">
            <thead
                class="bg-slate-50 border-b border-slate-200 text-xs font-bold text-slate-500 uppercase tracking-widest"
            >
                <tr>
                    <th class="px-6 py-4">Nama & Kontak</th>
                    <th class="px-6 py-4">Email</th>
                    <th class="px-6 py-4 text-right">Aksi</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                {
                    customers.map((c: any) => (
                        <tr class="hover:bg-slate-50/50 transition">
                            <td class="px-6 py-4">
                                <div class="font-bold text-slate-800">
                                    {c.CUST_NAME}
                                </div>
                                <div class="text-xs text-slate-400 font-mono">
                                    {c.CONTACT_NUMBER}
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm text-slate-600 font-medium">
                                {c.EMAIL}
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-3 font-bold text-sm">
                                    <a
                                        href={`/admin/customers/edit/${c.CUST_ID}`}
                                        class="text-indigo-600 hover:underline"
                                    >
                                        Edit
                                    </a>
                                    <button
                                        class="text-red-500 hover:underline delete-btn"
                                        data-id={c.CUST_ID}
                                    >
                                        Hapus
                                    </button>
                                </div>
                            </td>
                        </tr>
                    ))
                }
            </tbody>
        </table>
    </div>

    <script is:inline>
        document.querySelectorAll(".delete-btn").forEach((btn) => {
            btn.addEventListener("click", async () => {
                const id = btn.getAttribute("data-id");
                if (
                    confirm("Apakah Anda yakin ingin menghapus pelanggan ini?")
                ) {
                    try {
                        const response = await fetch(
                            `http://localhost:3000/customers/${id}`,
                            {
                                method: "DELETE",
                            },
                        );
                        const result = await response.json();
                        if (response.ok) {
                            alert(
                                result.message || "Pelanggan berhasil dihapus",
                            );
                            window.location.reload();
                        } else {
                            alert(
                                "Gagal menghapus pelanggan: " +
                                    (result.error || "Unknown error"),
                            );
                        }
                    } catch (error) {
                        console.error("Error:", error);
                        alert("Terjadi kesalahan saat menghubungi server");
                    }
                }
            });
        });
    </script>
</AdminLayout>
