---
import AdminLayout from "../../../../layouts/adminLayout.astro";

export async function getStaticPaths() {
    const resp = await fetch("http://localhost:3000/customers");
    const customers = await resp.json();
    return customers.map((c: any) => ({
        params: { id: c.CUST_ID.toString() },
    }));
}

const { id } = Astro.params;

// Fetch customer data
const resp = await fetch(`http://localhost:3000/customers/${id}`);
const customer = await resp.json();
---

<AdminLayout title="Edit Pelanggan">
    <div class="glass-panel section">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-xl font-bold">
                Edit Customer: {customer.CUST_NAME}
            </h2>
            <a href="/admin/customers" class="text-indigo-600 hover:underline"
                >Batal</a
            >
        </div>

        <form id="editCustomerForm" class="space-y-4">
            <input type="hidden" name="CUST_ID" value={id} />
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="form-group">
                    <label class="block text-sm font-medium text-slate-700 mb-1"
                        >Nama Lengkap</label
                    >
                    <input
                        type="text"
                        name="CUST_NAME"
                        value={customer.CUST_NAME}
                        class="w-full px-4 py-2 border rounded-lg outline-none focus:ring-2 focus:ring-indigo-500"
                        required
                    />
                </div>
                <div class="form-group">
                    <label class="block text-sm font-medium text-slate-700 mb-1"
                        >Email</label
                    >
                    <input
                        type="email"
                        name="EMAIL"
                        value={customer.EMAIL}
                        class="w-full px-4 py-2 border rounded-lg outline-none focus:ring-2 focus:ring-indigo-500"
                        required
                    />
                </div>
                <div class="form-group">
                    <label class="block text-sm font-medium text-slate-700 mb-1"
                        >Nomor Kontak</label
                    >
                    <input
                        type="text"
                        name="CONTACT_NUMBER"
                        value={customer.CONTACT_NUMBER}
                        class="w-full px-4 py-2 border rounded-lg outline-none focus:ring-2 focus:ring-indigo-500"
                    />
                </div>
            </div>

            <div class="form-group">
                <label class="block text-sm font-medium text-slate-700 mb-1"
                    >Alamat</label
                >
                <textarea
                    name="ADDRESS"
                    class="w-full px-4 py-2 border rounded-lg outline-none focus:ring-2 focus:ring-indigo-500 h-24"
                    >{customer.ADDRESS}</textarea
                >
            </div>

            <div class="pt-4">
                <button
                    type="submit"
                    class="bg-indigo-600 text-white px-8 py-2.5 rounded-xl font-bold hover:bg-indigo-700 transition shadow-lg shadow-indigo-100"
                >
                    Update Pelanggan
                </button>
            </div>
        </form>
    </div>

    <script is:inline>
        const form = document.getElementById("editCustomerForm");
        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            const id = data.CUST_ID;

            try {
                const response = await fetch(
                    `http://localhost:3000/customers/${id}`,
                    {
                        method: "PUT",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(data),
                    },
                );
                const result = await response.json();
                if (response.ok) {
                    alert("Pelanggan berhasil diupdate!");
                    window.location.href = "/admin/customers";
                } else {
                    alert(
                        "Gagal mengupdate pelanggan: " +
                            (result.error || "Unknown error"),
                    );
                }
            } catch (error) {
                console.error("Error:", error);
                alert("Terjadi kesalahan saat menghubungi server");
            }
        });
    </script>
</AdminLayout>

<style>
    .section {
        padding: 2rem;
    }
</style>
