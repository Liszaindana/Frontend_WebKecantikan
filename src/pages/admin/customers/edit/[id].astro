---
import AdminLayout from "../../../../layouts/adminLayout.astro";

const { id } = Astro.params;
// Mock Data
const customer = {
    name: "Budi Santoso",
    email: "budi@example.com",
    phone: "08123456789",
    address: "Jl. Merdeka No. 10",
};
---

<AdminLayout title="Edit Pelanggan">
    <div class="glass-panel section">
        <h2>Edit Pelanggan: {customer.name}</h2>

        <form class="form-layout">
            <div class="form-group">
                <label for="name">Nama Lengkap</label>
                <input
                    type="text"
                    id="name"
                    class="form-control"
                    value={customer.name}
                    required
                />
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input
                    type="email"
                    id="email"
                    class="form-control"
                    value={customer.email}
                    required
                />
            </div>

            <div class="form-group">
                <label for="phone">No. Telepon</label>
                <input
                    type="tel"
                    id="phone"
                    class="form-control"
                    value={customer.phone}
                    required
                />
            </div>

            <div class="form-group">
                <label for="address">Alamat</label>
                <textarea id="address" class="form-control"
                    >{customer.address}</textarea
                >
            </div>

            <div class="form-actions">
                <a href="/admin/customers" class="btn btn-outline">Batal</a>
                <button type="submit" class="btn btn-primary"
                    >Update Pelanggan</button
                >
            </div>
        </form>
    </div>
</AdminLayout>

<style>
    .section {
        padding: 2rem;
    }
    h2 {
        margin-top: 0;
        margin-bottom: 2rem;
    }
</style>
