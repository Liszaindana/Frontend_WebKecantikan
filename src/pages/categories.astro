---
import MainLayout from "../layouts/MainLayout.astro";
import { categories } from "../data/categories";
---

<MainLayout title="Kategori - Skinfinity">
    <main class="container page-content">
        <header class="page-header">
            <h1 class="text-gradient">Jelajahi Kategori</h1>
            <p>Temukan produk berdasarkan kategori pilihan Anda.</p>
        </header>

        <div class="category-grid">
            {
                categories.map((cat) => (
                    <a
                        href={`/products?category=${cat.name}`}
                        class="category-card glass-panel animate-fade-in"
                    >
                        <div class="cat-icon-lg">{cat.icon}</div>
                        <h3>{cat.name}</h3>
                        <span class="count">{cat.count} Produk</span>
                    </a>
                ))
            }
        </div>
    </main>
</MainLayout>

<style>
    .page-content {
        padding-top: 4rem;
        min-height: 60vh;
    }

    .page-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .page-header h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .page-header p {
        color: var(--color-text-muted);
        font-size: 1.2rem;
    }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 2rem;
    }

    .category-card {
        padding: 2.5rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-decoration: none;
        transition:
            transform 0.3s ease,
            background 0.3s;
    }

    .category-card:hover {
        transform: translateY(-8px);
        background: rgba(255, 255, 255, 0.08);
    }

    .cat-icon-lg {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.2));
    }

    .category-card h3 {
        margin: 0 0 0.5rem;
        color: var(--color-text-main);
    }

    .count {
        font-size: 0.875rem;
        color: var(--color-text-muted);
    }
</style>
