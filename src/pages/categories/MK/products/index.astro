---
import MainLayout from "../../../../layouts/MainLayout.astro";
import CategoryNav from "../../../../components/CategoryNav.astro";
import type { Product } from "../../../../data/products";

// Fetch categories to find the ID for "Makeup"
const categoriesRes = await fetch("http://localhost:3000/categories");
const categoriesData = await categoriesRes.json();

const targetCategory = categoriesData.find(
    (c: any) => c.CATEGORY.toUpperCase() === "MAKEUP",
);
const categoryId = targetCategory ? targetCategory.CATEGORY_ID : "MK";

// Fetch products for that specific category
let productsData = [];
try {
    const productsRes = await fetch(
        `http://localhost:3000/categories/${categoryId}/products`,
    );
    productsData = await productsRes.json();
} catch (error) {
    console.error("Error fetching Makeup products:", error);
}

// Map product data
const products: Product[] = productsData.map((p: any) => ({
    id: p.PRODUCT_ID,
    name: p.PRODUCT_NAME,
    price: p.PRICE,
    categoryId: p.CATEGORY_ID,
    stock: p.STOCK,
    categoryName: "MAKEUP",
    description: p.DESCRIPTION || "",
}));
---

<MainLayout title="Makeup - Skinfinity" activePath="/categories">
    <div class="page-wrapper">
        <CategoryNav activeCategory="MK" />
        <header class="category-header">
            <div class="container">
                <h1 class="category-title">Makeup</h1>
                <p class="category-desc">
                    Tampilkan pesona terbaik Anda dengan koleksi makeup
                    eksklusif dari Skinfinity.
                </p>
            </div>
        </header>

        <main class="products-container">
            {
                products.length > 0 ? (
                    <div class="product-grid">
                        {products.map((product) => (
                            <a
                                href={`/product/${product.id}`}
                                class="product-card"
                            >
                                <div class="product-image-box">
                                    <div class="image-content">
                                        <div class="img-placeholder">
                                            <span class="img-text">
                                                {product.name}
                                            </span>
                                        </div>
                                        <button
                                            class="wishlist-btn"
                                            onclick="event.preventDefault();"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="20"
                                                height="20"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z" />
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <h3 class="product-name">{product.name}</h3>
                                    <p class="product-price">
                                        Rp{" "}
                                        {product.price.toLocaleString("id-ID")}
                                    </p>
                                </div>
                            </a>
                        ))}
                    </div>
                ) : (
                    <div class="empty-state">
                        <p>Maaf, belum ada produk untuk kategori Makeup.</p>
                        <a href="/product" class="btn-primary">
                            Lihat Produk Lainnya
                        </a>
                    </div>
                )
            }
        </main>
    </div>
</MainLayout>

<style>
    .page-wrapper {
        background-color: #fce7f3;
        min-height: 100vh;
        padding-bottom: 5rem;
    }

    .category-header {
        padding: 0rem 0 2rem;
        text-align: center;
    }

    .breadcrumb {
        font-size: 0.9rem;
        color: #6b7280;
        margin-bottom: 1rem;
    }

    .breadcrumb a {
        color: #d946ef;
        text-decoration: none;
    }

    .category-title {
        font-size: 3rem;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 0.5rem;
        font-family: "Playfair Display", serif;
    }

    .category-desc {
        color: #6b7280;
        max-width: 600px;
        margin: 0 auto;
    }

    .products-container {
        max-width: 1280px;
        margin: 2rem auto;
        padding: 0 1.5rem;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 3rem;
    }

    .product-card {
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease;
        text-decoration: none;
    }

    .product-card:hover {
        transform: translateY(-5px);
    }

    .product-image-box {
        background: white;
        aspect-ratio: 1/1.1;
        border-radius: 20% 80% 20% 80% / 20% 50% 50% 80%;
        padding: 2.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.03);
    }

    .image-content {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .img-placeholder {
        width: 100%;
        height: 100%;
        background: #fdf2f8;
        border-radius: inherit;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #f472b6;
        font-weight: 600;
        text-align: center;
        padding: 1rem;
        overflow: hidden;
    }

    .wishlist-btn {
        position: absolute;
        top: 2rem;
        right: 2rem;
        color: #9ca3af;
    }

    .product-info {
        margin-top: 1.5rem;
        text-align: center;
    }

    .product-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.25rem;
    }

    .product-price {
        color: #6b7280;
        font-size: 1rem;
    }

    .empty-state {
        text-align: center;
        padding: 5rem 0;
    }

    .empty-state p {
        margin-bottom: 2rem;
        color: #6b7280;
        font-size: 1.2rem;
    }

    .btn-primary {
        display: inline-block;
        background: #d946ef;
        color: white;
        padding: 0.8rem 2rem;
        border-radius: 99px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 4px 14px rgba(217, 70, 239, 0.4);
    }
</style>
