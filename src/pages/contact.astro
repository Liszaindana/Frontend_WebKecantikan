---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import contactHero from "../assets/contact.png";

// Placeholder specifically for the map iframe
const mapUrl =
    "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3961.054363242!2d109.123!3d-6.879!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e6fb82604000001%3A0x6d901f416624e751!2sPKTJ%20Tegal!5e0!3m2!1sen!2sid!4v1700000000000!5m2!1sen!2sid";
---

<MainLayout title="Contact" activePath="/contact">
    <div class="contact-page">
        <!-- Top Section -->
        <section class="contact-hero">
            <div class="hero-left">
                <Image
                    src={contactHero}
                    alt="Contact Skinfinity"
                    class="contact-img"
                />
            </div>
            <div class="hero-right">
                <div class="hero-right-content">
                    <div class="section-group">
                        <h2 class="section-title">CONTACT US</h2>
                        <div class="contact-info-grid">
                            <div class="info-item">
                                <span class="info-label">Call Center</span>
                                <span class="info-value">62+ 895378146118</span>
                            </div>
                            <div class="info-item">
                                <div class="wa-header">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="20"
                                        height="20"
                                        viewBox="0 0 448 512"
                                        fill="#25d366"
                                    >
                                        <path
                                            d="M380.9 97.1c-41.9-42-97.7-65.1-157-65.1-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480 117.7 449.1c32.4 17.7 68.9 27 106.1 27l.1 0c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3 18.6-68.1-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1s56.2 81.2 56.1 130.5c0 101.8-84.9 184.6-186.6 184.6zM325.1 300.5c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8s-14.3 18-17.6 21.8c-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7 .9-6.9-.5-9.7s-12.5-30.1-17.1-41.2c-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2s-9.7 1.4-14.8 6.9c-5.1 5.6-19.4 19-19.4 46.3s19.9 53.7 22.6 57.4c2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4s4.6-24.1 3.2-26.4c-1.3-2.5-5-3.9-10.5-6.6z"
                                        ></path>
                                    </svg>
                                    <span class="info-label">WhatsApp</span>
                                </div>
                                <span class="info-value">62+ 815-4223-5634</span
                                >
                            </div>
                        </div>
                    </div>

                    <div class="section-group message-form">
                        <h2 class="section-title">SEND MESSAGE</h2>
                        <form class="contact-form">
                            <div class="form-row">
                                <div class="form-item">
                                    <label for="firstName">First Name</label>
                                    <input
                                        type="text"
                                        id="firstName"
                                        name="firstName"
                                    />
                                </div>
                                <div class="form-item">
                                    <label for="lastName">Last Name</label>
                                    <input
                                        type="text"
                                        id="lastName"
                                        name="lastName"
                                    />
                                </div>
                            </div>
                            <div class="form-item row">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" />
                            </div>
                            <div class="form-item row">
                                <label for="topic">Topic</label>
                                <input type="text" id="topic" name="topic" />
                            </div>
                            <div class="form-item row">
                                <label for="message">Message</label>
                                <textarea id="message" name="message" rows="1"
                                ></textarea>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Map Section -->
        <section class="map-section">
            <iframe
                src={mapUrl}
                width="100%"
                height="450"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
            >
            </iframe>
        </section>
    </div>
</MainLayout>

<style>
    .contact-page {
        width: 100%;
        overflow-x: hidden;
    }

    .contact-hero {
        display: flex;
        min-height: 550px;
        width: 100%;
    }

    .hero-left {
        flex: 1;
        overflow: hidden;
    }

    .contact-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-right {
        flex: 1;
        background-color: #ff99ff; /* More vibrant pink like in frame */
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 4rem;
    }

    .hero-right-content {
        max-width: 500px;
        width: 100%;
    }

    .section-group {
        margin-bottom: 2.5rem;
    }

    .section-title {
        font-family: "Playfair Display", serif;
        font-size: 1.3rem; /* Further reduced size */
        font-weight: 800;
        margin-bottom: 1.2rem;
        color: #1a1a1a;
        letter-spacing: 0.1em;
    }

    .contact-info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .wa-header {
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }

    .info-label {
        font-size: 0.75rem;
        font-weight: 600;
        color: #333;
        text-transform: capitalize;
    }

    .info-value {
        font-size: 0.95rem;
        font-weight: 900;
        color: #1a1a1a;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-row {
        display: flex;
        gap: 1rem;
    }

    .form-item {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
    }

    .form-item.row {
        flex-direction: row;
        align-items: center;
        gap: 1rem;
    }

    .form-item.row label {
        flex: 0 0 60px;
        margin-bottom: 0;
    }

    .form-item.row input,
    .form-item.row textarea {
        flex: 1;
    }

    .form-item label {
        font-size: 0.75rem;
        font-weight: 600;
        color: #333;
    }

    .form-item input,
    .form-item textarea {
        background: transparent;
        border: none;
        border-bottom: 1px solid rgba(0, 0, 0, 0.15);
        padding: 0.4rem 0;
        outline: none;
        font-size: 0.9rem;
        color: #1a1a1a;
        transition: border-color 0.3s;
        font-family: inherit;
    }

    .form-item input:focus,
    .form-item textarea:focus {
        border-color: #1a1a1a;
    }

    .map-section {
        width: 100%;
        border-top: 6px solid #ff00ff; /* Sharp magenta line */
        border-bottom: 6px solid #ff00ff;
    }

    @media (max-width: 992px) {
        .contact-hero {
            flex-direction: column;
        }
        .hero-left {
            height: 350px;
        }
        .hero-right {
            padding: 3rem 1.5rem;
        }
    }
</style>
