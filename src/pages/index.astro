---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import homeHero from "../assets/Home1.PNG";
import salesImage from "../assets/sales.png";
import bannerImage from "../assets/banner.png";

// Empty for now as requested
const newArrivals = [];
---

<MainLayout title="Home">
	<!-- Hero Section -->
	<section class="hero-section">
		<div class="hero-container">
			<Image src={homeHero} alt="Skinfinity Hero" class="hero-img" />
			<div class="hero-title-overlay">
				<h1>SKINFINITY</h1>
			</div>
			<button class="talk-btn">
				<svg
					width="20"
					height="20"
					viewBox="0 0 24 24"
					fill="currentColor"
				>
					<path
						d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"
					></path>
				</svg>
				Talk to Us
			</button>
		</div>
	</section>

	<!-- New Arrival / Best Seller Section -->
	<section class="products-section">
		<div class="container text-center">
			<div class="section-title-tabs">
				<span class="active">NEW ARRIVAL</span>
				<span class="divider">/</span>
				<span class="inactive">BEST SELLER</span>
			</div>

			<div class="products-grid">
				<!-- Empty as requested -->
				{
					newArrivals.length === 0 && (
						<div class="empty-placeholder">
							New items coming soon...
						</div>
					)
				}
			</div>
		</div>
	</section>

	<!-- Sales Section -->
	<section class="sales-section">
		<div class="sales-container">
			<Image src={salesImage} alt="Special Sale" class="sales-img" />
		</div>
	</section>

	<!-- Banner Section with Repeating Text -->
	<section class="banner-section">
		<div class="repeating-text-container">
			<div class="moving-text">
				<span
					>SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
				</span>
			</div>
			<div class="moving-text reverse">
				<span
					>SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
				</span>
			</div>
			<div class="moving-text">
				<span
					>SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
					SKINFINITY | SKINFINITY | SKINFINITY | SKINFINITY |
				</span>
			</div>
		</div>
		<div class="banner-content">
			<div class="tablet-frame">
				<Image
					src={bannerImage}
					alt="Brand Banner"
					class="banner-img"
				/>
			</div>
		</div>
	</section>
</MainLayout>

<style>
	/* Hero Section */
	.hero-section {
		position: relative;
		width: 100%;
		overflow: hidden;
		background: #fff;
	}

	.hero-container {
		position: relative;
		width: 100%;
		display: flex;
		justify-content: center;
	}

	.hero-img {
		width: 100%;
		height: auto;
		display: block;
	}

	.hero-title-overlay {
		position: absolute;
		top: 20px;
		left: 50%;
		transform: translateX(-50%);
		background: transparent;
		z-index: 10;
		text-align: center;
		width: 100%;
	}

	.hero-title-overlay h1 {
		margin: 0;
		font-size: 2.2rem;
		font-weight: 800;
		color: #1a1a1a;
		letter-spacing: 0.4em;
		font-family: "Playfair Display", serif;
		line-height: 1.2;
		text-shadow: 0 2px 4px rgba(255, 255, 255, 0.5);
	}

	.talk-btn {
		position: absolute;
		bottom: 10%;
		right: 5%;
		background-color: #fce7f3;
		color: #1a1a1a;
		padding: 0.8rem 2rem;
		border-radius: 50px;
		font-weight: 700;
		font-size: 0.9rem;
		display: flex;
		align-items: center;
		gap: 0.8rem;
		border: none;
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
		cursor: pointer;
	}

	.talk-btn:hover {
		transform: translateY(-3px);
		background-color: #fdf2f8;
		box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
	}

	/* Products Section */
	.products-section {
		background-color: #fce7f3;
		padding: 2rem 0;
	}

	.section-title-tabs {
		font-size: 1.2rem;
		font-weight: 800;
		margin-bottom: 3rem;
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		letter-spacing: 0.1em;
	}

	.section-title-tabs span {
		cursor: pointer;
		position: relative;
		padding-bottom: 5px;
		transition: all 0.3s ease;
	}

	/* Hover for NEW ARRIVAL */
	.section-title-tabs span:first-child:hover {
		border-bottom: 2px solid #1a1a1a;
	}

	/* Hover for BEST SELLER */
	.section-title-tabs span:last-child:hover {
		color: #1a1a1a;
		font-weight: 950;
		border-bottom: 2px solid #1a1a1a;
	}

	.section-title-tabs .active {
		color: #1a1a1a;
	}

	.section-title-tabs .inactive {
		color: #94a3b8;
	}

	.empty-placeholder {
		min-height: 300px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgba(26, 26, 26, 0.3);
		font-style: italic;
	}

	/* Sales Section */
	.sales-section {
		width: 100%;
		background: #fff;
	}

	.sales-container {
		width: 100%;
	}

	.sales-img {
		width: 100%;
		height: auto;
		display: block;
	}

	/* Banner Section */
	.banner-section {
		position: relative;
		background-color: #f472b6;
		padding: 8rem 0;
		overflow: hidden;
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 600px;
	}

	.repeating-text-container {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 1rem;
		opacity: 0.4;
		pointer-events: none;
		z-index: 1;
		transform: rotate(-5deg) scale(1.1);
	}

	.moving-text {
		white-space: nowrap;
		font-size: 8rem;
		font-weight: 900;
		color: transparent;
		-webkit-text-stroke: 1px rgba(255, 255, 255, 0.8);
		line-height: 1;
		user-select: none;
		text-transform: uppercase;
	}

	.moving-text.reverse {
		align-self: flex-end;
		margin-right: -10%;
	}

	.banner-content {
		position: relative;
		z-index: 10;
		max-width: 1000px;
		width: 90%;
		display: flex;
		justify-content: center;
	}

	.tablet-frame {
		background-color: #1a1a1a;
		padding: 1.5rem;
		border-radius: 40px;
		box-shadow: 0 40px 80px rgba(0, 0, 0, 0.3);
		width: 100%;
		max-width: 800px;
	}

	.banner-img {
		width: 100%;
		height: auto;
		display: block;
		border-radius: 20px;
	}

	@media (max-width: 768px) {
		.moving-text {
			font-size: 3rem;
		}
		.section-title-tabs {
			font-size: 1rem;
		}
		.tablet-frame {
			padding: 0.8rem;
			border-radius: 25px;
		}
	}
</style>
