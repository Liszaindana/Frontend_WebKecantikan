    </div>
</MainLayout>

<script>
    function renderCart() {
        const cartItemsList = document.getElementById("cartItemsList");
        const emptyCart = document.getElementById("emptyCart");
        const subtotalPriceEl = document.getElementById("subtotalPrice");

        // Get cart from localStorage
        const cart = JSON.parse(
            localStorage.getItem("skinfinity_cart") || "[]",
        );

        if (cart.length === 0) {
            if (emptyCart) emptyCart.style.display = "block";
            if (cartItemsList) cartItemsList.style.display = "none";
            if (subtotalPriceEl) subtotalPriceEl.textContent = "Rp 0";
            return;
        }

        // Show cart items, hide empty message
        if (emptyCart) emptyCart.style.display = "none";
        if (cartItemsList) cartItemsList.style.display = "flex";

        // Calculate subtotal
        let subtotal = 0;

        // Build cart HTML
        let cartHTML = "";
        cart.forEach((item: any, index: number) => {
            subtotal += item.price * item.quantity;
            cartHTML += `
                <div class="cart-item" data-index="${index}">
                    <div class="item-image-wrapper">
                        <div class="item-image">
                            <div class="image-placeholder">
                                <span class="img-text">${item.name}</span>
                            </div>
                        </div>
                    </div>
                    <div class="item-details">
                        <div class="name-price-row">
                            <h3 class="item-name">
                                ${item.name}
                            </h3>
                            <span class="item-price">
                                Rp ${item.price.toLocaleString("id-ID")}
                            </span>
                        </div>
                        <p class="item-qty">
                            Qty <strong>${item.quantity}</strong>
                        </p>
                        <div class="item-actions">
                            <button class="action-link">
                                ADD TO WHISLIST
                            </button>
                            <button class="action-link remove remove-item" data-index="${index}">
                                REMOVE
                            </button>
                        </div>
                    </div>
                </div>
            `;
        });

        if (cartItemsList) {
            cartItemsList.innerHTML = cartHTML;
        }

        // Update subtotal
        if (subtotalPriceEl) {
            subtotalPriceEl.textContent = `Rp ${subtotal.toLocaleString("id-ID")}`;
        }

        // Add event listeners to remove buttons
        document.querySelectorAll(".remove-item").forEach((btn) => {
            btn.addEventListener("click", (e) => {
                const target = e.target as HTMLElement;
                const index = parseInt(target.dataset.index || "0");
                removeFromCart(index);
            });
        });
    }

    function removeFromCart(index: number) {
        let cart = JSON.parse(localStorage.getItem("skinfinity_cart") || "[]");
        cart.splice(index, 1);
        localStorage.setItem("skinfinity_cart", JSON.stringify(cart));
        renderCart();
    }

    // Initialize cart on page load
    document.addEventListener("DOMContentLoaded", renderCart);

    // Checkout button
    document.getElementById("checkoutBtn")?.addEventListener("click", () => {
        const cart = JSON.parse(
            localStorage.getItem("skinfinity_cart") || "[]",
        );
        if (cart.length === 0) {
            alert("Keranjang belanja Anda kosong!");
            return;
        }
        alert("Terima kasih! Pesanan Anda sedang diproses.");
        localStorage.removeItem("skinfinity_cart");
        renderCart();
    });
</script>

<style is:global>
    .chart-page {
        background-color: #fce7f3; /* Matching light pink from product pages */
        min-height: 80vh;
        padding: 2rem 0;
    }

    .chart-container {
        display: flex;
        gap: 5rem;
        max-width: 1150px; /* Wider than before, but still structured */
        margin: 0 auto;
    }

    .shopping-bag-section {
        flex: 1.6;
    }

    .order-summary-section {
        flex: 1;
    }

    .page-title {
        font-family: "Playfair Display", serif;
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 3rem;
        color: #1a1a1a;
        letter-spacing: 0.1em;
    }

    .summary-title {
        font-family: "Playfair Display", serif;
        font-size: 2.2rem;
        font-weight: 400; /* Lighter weight as in frame for summary title */
        margin-bottom: 2.5rem;
        color: #1a1a1a;
        letter-spacing: 0.05em;
        margin-top: 0;
    }

    .cart-items-list {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .empty-cart {
        text-align: center;
        padding: 3rem;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 20px;
    }

    .empty-cart p {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        color: #1a1a1a;
    }

    .shop-now-btn {
        display: inline-block;
        background: #1a1a1a;
        color: white;
        padding: 1rem 2rem;
        font-weight: 700;
        text-decoration: none;
        transition: transform 0.2s;
    }

    .shop-now-btn:hover {
        transform: scale(1.05);
    }

    .cart-item {
        display: flex;
        gap: 2.5rem;
        padding-bottom: 2rem;
        border-bottom: 1.5px solid rgba(0, 0, 0, 0.15);
        align-items: center;
    }

    .item-image-wrapper {
        width: 140px;
        height: 140px;
        flex-shrink: 0;
    }

    .item-image {
        width: 100%;
        height: 100%;
        background: white;
        border-radius: 20% 80% 20% 80% / 20% 50% 50% 80%;
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.03);
    }

    .image-placeholder {
        width: 100%;
        height: 100%;
        background: #fdf2f8;
        border-radius: inherit;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #f472b6;
        font-weight: 600;
        text-align: center;
        padding: 0.5rem;
        overflow: hidden;
        font-size: 0.75rem;
    }

    .item-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .name-price-row {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 0.8rem;
    }

    .item-name {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1a1a1a;
        display: flex;
        align-items: center;
        overflow: hidden;
        flex: 0 1 auto; /* Don't fill all available space */
        margin: 0;
        white-space: nowrap;
    }

    .item-price {
        font-size: 1.3rem;
        font-weight: 900;
        color: #1a1a1a;
        margin-left: 1rem;
    }

    .item-qty {
        font-size: 1rem;
        margin-bottom: 1.8rem;
        color: #1a1a1a;
    }

    .item-actions {
        display: flex;
        gap: 2rem;
    }

    .action-link {
        font-size: 0.85rem;
        font-weight: 800;
        color: #1a1a1a;
        text-decoration: underline;
        border: none;
        background: transparent;
        padding: 0;
        cursor: pointer;
        text-transform: uppercase;
    }

    .action-link.remove {
        color: #6b7280;
    }

    .promo-box {
        margin-bottom: 2rem;
    }

    .promo-box input {
        width: 100%;
        padding: 1.4rem;
        border: 1.5px solid #1a1a1a;
        background: transparent;
        font-family: inherit;
        font-weight: 700;
        text-align: center;
        outline: none;
        font-size: 1rem;
        letter-spacing: 0.05em;
    }

    .summary-totals {
        border-bottom: 2.5px solid #1a1a1a;
        margin-bottom: 2rem;
        padding-bottom: 1.2rem;
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        font-size: 1.1rem;
        font-weight: 600;
        color: #1a1a1a;
    }

    .total-row strong {
        font-weight: 900;
        font-size: 1.25rem;
    }

    .checkout-btn {
        width: 100%;
        background-color: #000;
        color: #fff;
        padding: 1.4rem;
        font-weight: 900;
        font-size: 1rem;
        letter-spacing: 0.15em;
        cursor: pointer;
        transition: transform 0.2s;
        margin-bottom: 2rem;
        border: none;
    }

    .checkout-btn:hover {
        background-color: #1a1a1a;
        transform: scale(1.02);
    }

    .payment-icons {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
    }

    .payment-svg {
        opacity: 0.6;
    }

    @media (max-width: 992px) {
        .chart-container {
            flex-direction: column;
            gap: 4rem;
        }
        .chart-page {
            padding: 3rem 1.5rem;
        }
    }
</style>
